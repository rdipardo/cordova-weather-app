{
    "plugins": ["plugins/markdown"],
    "markdown": {
        "idInHeadings": true
    },
    "recurseDepth": 10,
    "source": {
        "includePattern": ".+\\.js(doc|x)?$",
        "excludePattern": "(^|\\/|\\\\)_"
    },
    "sourceType": "module",
    "tags": {
        "allowUnknownTags": true,
        "dictionaries": ["jsdoc", "closure"]
    },
    "templates": {
        "cleverLinks": false,
        "monospaceLinks": false
    },
    "opts": {
        "template": "node_modules/clean-jsdoc",
        "theme_opts": {
            "langNames": false,
            "project": {
                "title": "Cordova Weather App",
                "version": "1.2.1",
                "repo": "https://github.com/rdipardo/cordova-weather-app/"
            },
            "meta": [{
                "name": "author",
                "content": "Robert Di Pardo"
              },
              {
                "name": "description",
                "content": "A simple weather feed generator for Android"
              }
            ],
            "add_assets": [{
                "href": "https://raw.githubusercontent.com/rdipardo/cordova-weather-app/main/www/favicon.ico",
                "type": "image/x-icon"
              }
            ],
            "create_style": ".readme table th {border: 0; padding: 0;} .readme ol {list-style: decimal !important;}"
        },
        "encoding": "utf8",
        "destination": "doc/",
        "recurse": true,
        "readme": "README.md"
    }
}
